@model CMSMenuResourceFrontModel
@{
    ViewData["Title"] = "CMS Menu Resource";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var rightsModel = Functions.GetPageRightsCheck(Context.Session);
}

@section DataTableCssLoad {}
@section DataTableJsLoad {}
@section CkEditorJsLoad {}
@section Scripts {
    <script src="@Href("~/Admin/js/PageDetails/CMSMenuResource/CMSMenuResource.js?dt="+DateTime.Now.ToString("ddMMyyyyfffttfff"))"></script>
}

@section Modals {
    @* <script src="@Href("~/Admin/libs/CKEditor/ckeditor.js")"></script> *@
    <div id="addeditCMSMenuResourceModal" class="modal fade" tabindex="-1" aria-labelledby="mdlLabel" style="display: none;">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header bg-light p-3">
                    <h5 class="modal-title" id="mdlLabel">@ViewData["Title"] Form</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addeditCMSMenuResourceForm" action="@Url.Content("~/Admin/SaveCMSMenuResourceData")" autocomplete="off">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CMSMenuResId" />
                        <input type="hidden" asp-for="BannerImagePath" />
                        <input type="hidden" asp-for="IconImagePath" />
                        <div class="row gx-3 gy-2">
                            <div class="col-md-4">
                                <label asp-for="LanguageId" class="form-label">Language<span style="color:red">*</span></label>
                                <select class="form-select" asp-for="LanguageId">
                                    <option value="">--Select Language--</option>
                                </select>
                                <span asp-validation-for="LanguageId" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ResourceType" class="form-label">Resource Type<span style="color:red">*</span></label>
                                <select class="form-select" asp-for="ResourceType">
                                    <option value="">--Select Resource Type--</option>
                                </select>
                                <span asp-validation-for="ResourceType" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MenuName" class="form-label">Menu Name<span style="color:red">*</span></label>
                                <input type="text" asp-for="MenuName" class="form-control" placeholder="Enter Menu Name">
                                <span asp-validation-for="MenuName" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Tooltip" class="form-label">Tool tip<span style="color:red">*</span></label>
                                <input type="text" asp-for="Tooltip" class="form-control" placeholder="Enter Tooltip">
                                <span asp-validation-for="Tooltip" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MenuURL" class="form-label">Menu URL<span style="color:red">*</span></label>
                                <input type="text" asp-for="MenuURL" class="form-control" placeholder="Enter MenuURL">
                                <span asp-validation-for="MenuURL" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MetaTitle" class="form-label">Meta Title<span style="color:red">*</span></label>
                                <input type="text" asp-for="MetaTitle" class="form-control" placeholder="Enter Meta Title">
                                <span asp-validation-for="MetaTitle" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MetaDescription" class="form-label">Meta Description<span style="color:red">*</span></label>
                                <input type="text" asp-for="MetaDescription" class="form-control" placeholder="Enter Meta Description">
                                <span asp-validation-for="MetaDescription" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="col_menu_type" class="form-label">Menu Type<span style="color:red">*</span></label>
                                <select class="form-select" asp-for="col_menu_type">
                                    <option value="">--Select Menu Type--</option>
                                </select>
                                <span asp-validation-for="col_menu_type" class="text-danger"></span>
                            </div>
                            <div class="col-md-4" id="dvParentId">
                                <label asp-for="col_parent_id" class="form-label">Parent Menu<span style="color:red">*</span></label>
                                <select class="form-select" asp-for="col_parent_id">
                                    <option value="">--Select Parent Menu--</option>
                                </select>
                                <span asp-validation-for="col_parent_id" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="BannerImage" class="form-label">Banner Image</label>
                                <div class="input-group">
                                    <input type="file" class="form-control" asp-for="BannerImage" aria-label="Upload" accept="image/*">
                                    <a class="input-group-text" href="#" title="View" target="_Target" id="ViewfileIF"><i class="ri-eye-fill align-bottom me-2 text-muted"></i></a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="IconImage" class="form-label">Icon Image</label>
                                <div class="input-group">
                                    <input type="file" class="form-control" asp-for="IconImage" aria-label="Upload" accept="image/*">
                                    <a class="input-group-text" href="#" type="button" title="View" target="_Target" id="ViewfileIF1"><i class="ri-eye-fill align-bottom me-2 text-muted"></i></a>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="IsActive" class="form-label">Status</label>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="IsActive" />
                                    <label class="form-check-label" for="IsActive">Is Active</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="IsRedirect" class="form-label">Redirect</label>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="IsRedirect" />
                                    <label class="form-check-label" for="IsRedirect">Yes</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="IsFullScreen" class="form-label">FullScreen</label>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" asp-for="IsFullScreen" />
                                    <label class="form-check-label" for="IsFullScreen">Yes</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="PageDescription" class="form-label">Page Description</label>
                                <textarea rows="5" cols="12" asp-for="PageDescription" class="form-control" placeholder="Enter Page Description"></textarea>
                                <span asp-validation-for="PageDescription" class="text-danger"></span>
                                <script type="text/javascript">
                                    CKEDITOR.dtd.$removeEmpty['i'] = false;
                                    var editor = CKEDITOR.replace('PageDescription', {
                                        extraPlugins: 'tableresize'
                                    });
                                </script>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="addeditCMSMenuResourceSubmit">Save</button>
                </div>
            </div>
        </div>
    </div>
}

<input type="hidden" id="frmPageUpdate" value="@rightsModel.Update.ToString().ToLower()" />
<input type="hidden" id="frmPageDelete" value="@rightsModel.Delete.ToString().ToLower()" />

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header border-bottom-dashed">
                <div class="row g-4 align-items-center">
                    <div class="col-sm">
                        <div>
                            <h5 class="card-title mb-0">@ViewData["Title"] List</h5>
                        </div>
                    </div>
                    <div class="col-sm-auto">
                        <div class="d-flex flex-wrap align-items-start gap-2">
                            @if (rightsModel.Insert)
                            {
                                <button type="button" class="btn btn-success add-btn" id="addCMSMenuResource"><i class="ri-add-line align-bottom me-1"></i> Add New @ViewData["Title"]</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered scroll-horizontal w-100 text-center nowrap dataTable no-footer" id="datatableCMSMenuResource" data-url="@Url.Content("~/Admin/GetCMSMenuResourceData")">
                    <thead class="table-light">
                        <tr class="text-uppercase">
                            <th>#</th>
                            <th>Menu Name</th>
                            <th>Menu URL</th>
                            <th>Menu Resource Type</th>
                            <th>Parent Name</th>
                            <th>Is Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>