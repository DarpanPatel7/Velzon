<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="none" data-preloader="disable">
<head>
    <meta charset="utf-8" />
    <title>Sign In | Velzon - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="@Href("~/Admin/images/favicon.ico")">

    <!-- Layout config Js -->
    <script src="@Href("~/Admin/js/layout.js")"></script>
    <!-- Bootstrap Css -->
    <link href="@Href("~/Admin/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="@Href("~/Admin/css/icons.min.css")" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="@Href("~/Admin/css/app.min.css")" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="@Href("~/Admin/css/custom.min.css")" rel="stylesheet" type="text/css" />
    <!-- sweetalert Css-->
    <link href="@Href("~/Admin/libs/sweetalert2/sweetalert2.min.css")" rel="stylesheet" type="text/css" />
</head>

<body>

    <div class="auth-page-wrapper pt-5">
        <!-- auth page bg -->
        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <div class="bg-overlay"></div>

            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>

        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <div>
                                <a href="index.html" class="d-inline-block auth-logo">
                                    <img src="@Href("~/Admin/images/logo-light.png")" alt="" height="20">
                                </a>
                            </div>
                            <p class="mt-3 fs-15 fw-medium">Premium Admin & Dashboard Template</p>
                        </div>
                    </div>
                </div>
                <!-- end row -->

                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card mt-4">

                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5 class="text-primary">Welcome Back !</h5>
                                    <p class="text-muted">Sign in to continue to Velzon.</p>
                                </div>
                                <div class="p-2 mt-4">
                                    <form method="post" asp-controller="Account" asp-action="Index" id="loginForm" autocomplete="off">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" class="form-control" asp-for="hfCaptcha">
                                        <div class="mb-3">
                                            <label for="username" class="form-label">Username</label>
                                            <input type="text" class="form-control" asp-for="Username" placeholder="Email Address" autocomplete="off">
                                        </div>

                                        <div class="mb-3">
                                            <div class="float-end">
                                                <a href="javascript:;" class="text-muted">Forgot password?</a>
                                            </div>
                                            <label class="form-label" for="password-input">Password</label>
                                            <div class="position-relative auth-pass-inputgroup mb-3">
                                                <input type="password" class="form-control pe-5 password-input" asp-for="Password" placeholder="Password" autocomplete="off">
                                                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="d-flex align-items-center">
                                                <img id="imgCapcha" class="me-2 border rounded" alt="Captcha Image"/>
                                                <button type="button" class="btn btn-danger px-3 py-2" onclick="return resetCaptchaImage();">
                                                    <i class="mdi mdi-refresh"></i>
                                                </button>
                                            </div>
                                            <input type="text" class="form-control mt-2" asp-for="Captcha" placeholder="Enter Captcha">
                                        </div>


                                        <div class="mt-4">
                                            <button class="btn btn-success w-100" type="button" onclick="return SubmitsEncry();">Sign In</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- end card body -->
                        </div>
                        <!-- end card -->

                        <div class="mt-4 text-center">
                            <p class="mb-0">Don't have an account ? <a href="auth-signup-basic.html" class="fw-semibold text-primary text-decoration-underline"> Signup </a> </p>
                        </div>

                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->

        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">&copy;
                                <script>document.write(new Date().getFullYear())</script> Velzon. Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesbrand
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->
    <script>
        var baseUrl = "@Url.Content("~/")";
    </script>
    <!-- JAVASCRIPT -->
    
    <script src="@Href("~/Admin/libs/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Href("~/Admin/libs/simplebar/simplebar.min.js")"></script>
    <script src="@Href("~/Admin/libs/node-waves/waves.min.js")"></script>
    <script src="@Href("~/Admin/libs/feather-icons/feather.min.js")"></script>
    <script src="@Href("~/Admin/js/pages/plugins/lord-icon-2.1.0.js")"></script>
    <script src="@Href("~/Admin/libs/sweetalert2/sweetalert2.min.js")"></script>
    <script src="@Href("~/Admin/js/plugins.js")"></script>
    <script src="@Href("~/Admin/js/jquery.min.js")"></script>

    <!-- particles js -->
    <script src="@Href("~/Admin/libs/particles.js/particles.js")"></script>
    <!-- particles app js -->
    <script src="@Href("~/Admin/js/pages/particles.app.js")"></script>
    <!-- password-addon init -->
    <script src="@Href("~/Admin/js/pages/password-addon.init.js")"></script>
    <!-- BEGIN PAGE LEVEL JS-->
    <script src="@Href("~/Admin/js/secure/aes.js")"></script>
    <script src="@Href("~/Admin/js/secure/hash.js")"></script>
    <script src="@Href("~/Admin/js/Common.js")"></script>

    <script>
        var regexGlobalValidation = new RegExp(htmlDecode("@Functions.regGlobalValidation"));
        var regexName = new RegExp(htmlDecode("@Functions.regName"));
        var regexMobileNo = new RegExp(htmlDecode("@Functions.regMobileNo"));
        var regexPincode = new RegExp(htmlDecode("@Functions.regPincode"));
        var regexNumber = new RegExp(htmlDecode("@Functions.regNumber"));
        var regexEmail = new RegExp(htmlDecode("@Functions.regEmail"));
        var regexPassword = new RegExp(htmlDecode("@Functions.regPassword"));
        var regexURL = new RegExp(htmlDecode("@Functions.regURL"));
        var dateFormat = '@Functions.dateFormat';
        var allowModalOutsideClick = @Functions.allowModalOutsideClick.ToString().ToLower();
        var allowKeyboardInputOnTime = @Functions.allowKeyboardInputOnTime.ToString().ToLower();
        var allowKeyboardInputOnDate = @Functions.allowKeyboardInputOnDate.ToString().ToLower();
        var allowInspectElement = @Functions.allowInspectElement.ToString().ToLower();
    </script>

    <script>
        $(document).ready(function () {
             HideLoader();
             resetCaptchaImage();
        });

        function SubmitsEncry() {
            var txtUserName = document.getElementById("Username").value.trim();
            var txtpassword = document.getElementById("Password").value.trim();
            var txtCaptcha = document.getElementById("Captcha").value.trim();
            if (txtUserName == "") {
                resetCaptchaImage();
                ShowMessage('Please enter UserName',"","error");
                return false;
            }
            else if (txtpassword == "") {
                resetCaptchaImage();
                ShowMessage('Please enter Password',"","error");
                return false;
            }
            else if (txtCaptcha == "") {
                resetCaptchaImage();
                ShowMessage('Please enter Captcha',"","error");
                return false;
            }
            else {
                txtUserName.value = FrontEncryptFront("Username");
                $('#Password').val(FrontValue($('#Password').val() +"exegil"+ $('#Captcha').val()));
                $('form#loginForm').submit();
                return true;
            }
        }

        function resetCaptchaImage() {
            var fdhfCaptcha = document.getElementById("hfCaptcha");
            var token = $('input[name="AntiforgeryFieldname"]').val();
            $.ajax({
                destroy: true,
                type: "get",
                contentType: "application/x-www-form-urlencoded",
                url: ResolveUrl("/GetCaptchaDetails?strLast=" + document.getElementById("hfCaptcha").value),
                success: function (data) {
                    var maindata = data.result;
                    if (!data.isError) {
                        // Define the string, also meaning that you need to know the file extension
                        var encoded = maindata.fileSRC;
                        var hfCaptcha = maindata.captchaval;

                        // and then to display the image
                        var img = document.getElementById("imgCapcha");
                        fdhfCaptcha.value = hfCaptcha;

                        // alternatively, you can do this
                        img.src = "data:image/png;base64, " + encoded;
                    }
                    else {
                        ShowMessage(data.strMessage, "", data.type);
                    }
                }
            });
        }

        @try
        {
            @if (ViewBag.MyScriptToRun != null)
            {
                @if (!string.IsNullOrWhiteSpace(ViewBag.MyScriptToRun.ToString()))
                {
                    @Html.Raw(ViewBag.MyScriptToRun.ToString())
                }
            }
        }catch(Exception)
        {
        }
    </script>
</body>
</html>